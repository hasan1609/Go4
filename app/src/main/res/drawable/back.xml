<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Item untuk state normal -->
    <item>
        <layer-list>
            <!-- Lingkaran luar -->
            <item
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp">
                <shape
                    android:dither="true"
                    android:shape="oval"
                    android:useLevel="false"
                    android:visible="true">
                    <gradient
                        android:angle="270"
                        android:endColor="#D9D9D9"
                        android:startColor="#D9D9D9" />
                    <corners
                        android:radius="15dp" />
                    <size
                        android:width="40dp"
                        android:height="40dp" />
                </shape>
            </item>

            <!-- Panah kembali -->
            <item
                android:left="4dp"
                android:top="4dp"
                android:bottom="4dp"
                android:right="4dp"
                android:drawable="@drawable/ic_back"
                android:gravity="center"/>
        </layer-list>
    </item>

    <!-- Item untuk state lainnya jika diperlukan -->
    <!-- ... -->

</selector>