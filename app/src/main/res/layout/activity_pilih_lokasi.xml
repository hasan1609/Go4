<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.PilihLokasiActivity"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_marginEnd="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/edt_dari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="9dp"
                    android:hint="Pilih Lokasi Jemput"
                    android:background="@drawable/bg_edt_text_transparent"
                    android:completionThreshold="1"
                    android:drawableLeft="@drawable/ic_start_order"
                    android:inputType="text"
                    android:layout_marginBottom="8dp"
                    android:drawablePadding="5dp"
                    android:maxLines="1"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/edt_tujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="9dp"
                    android:hint="Pilih Lokasi Tujuan"
                    android:background="@drawable/bg_edt_text_transparent"
                    android:completionThreshold="1"
                    android:drawableLeft="@drawable/ic_pinmap"
                    android:inputType="text"
                    android:drawablePadding="5dp"
                    android:maxLines="1"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/div1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/lokasi"
            android:layout_marginVertical="10dp"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/lokasi_sekarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/div1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gunakan Lokasi Anda Saat ini"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/alamat_sekarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Oke" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/div2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginVertical="10dp"
                android:background="@color/grey"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="10dp"
            android:text="Pilih di peta" />
    </RelativeLayout>

</layout>