<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/ly_toko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/foto_toko"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="7dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="7dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nama_toko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Toko"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jml_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 Produk"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:background="@color/primary_color"
            android:id="@+id/ic_hapus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Hapus"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_below="@id/ly_toko"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/scndary_color" />

</RelativeLayout>