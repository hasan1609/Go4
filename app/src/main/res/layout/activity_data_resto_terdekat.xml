<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.DataRestoTerdekatActivity">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/custom_appbar"/>

        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_edt_rounded_white"
            android:padding="4dp"
            android:textColorHint="@color/scndary_color"
            android:searchIcon="@drawable/ic_search"
            android:showDividers="none" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_resto_terdekat"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="25dp"
            android:visibility="gone"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/txt_kosong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Maaf Tidak Ada Resto Disekitar Anda"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="25dp" />

    </LinearLayout>

</layout>